RewriteEngine On
# Redirect www to root domain for canonicalization
RewriteCond %{HTTP_HOST} ^www\.ukmipolmed\.xo\.je$ [NC]
RewriteRule ^(.*)$ http://ukmipolmed.xo.je/$1 [L,R=301]

# Block write/modify verbs to any JSON (hardens against PUT/POST/etc.)
<FilesMatch "\.json$">
    <LimitExcept GET HEAD OPTIONS>
        Require all denied
    </LimitExcept>
</FilesMatch>

# Fully deny sensitive stores from the web (cannot be read or written)
<FilesMatch "^(insights|data)\.json$">
    Require all denied
</FilesMatch>

# default.json may be read, but not modified
<Files "default.json">
    <LimitExcept GET HEAD OPTIONS>
        Require all denied
    </LimitExcept>
</Files>

# Legacy Apache 2.2 fallback
<IfModule mod_access_compat.c>
    <FilesMatch "^(insights|data)\.json$">
        Order allow,deny
        Deny from all
    </FilesMatch>
    <Files "default.json">
        <LimitExcept GET HEAD OPTIONS>
            Order allow,deny
            Deny from all
        </LimitExcept>
    </Files>
    <FilesMatch "\.json$">
        <LimitExcept GET HEAD OPTIONS>
            Order allow,deny
            Deny from all
        </LimitExcept>
    </FilesMatch>
</IfModule>
